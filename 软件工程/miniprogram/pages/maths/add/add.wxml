<!--pages/maths/add/add.wxml-->
<!--maths.wxml-->
<view class="container">
  <view class="clock">
  <text>当前题目：{{counter}}/{{maxtime}}</text>
  </view>
  <view class="clock">
  <text>倒计时：{{countDownNum}}</text>
  </view>
  <view class="shuanshi">
    <text>{{x}}</text>
    <text>+</text>
    <text>{{y}}</text>
    <text>=</text>
    <text>?</text>
  </view>
  <view class="inputV">
    <input type="time" bindinput="InputValue" maxlength="6" placeholder="请输入答案"></input>
  </view>
  <button bindtap="SURE" class="button"><text>提交</text></button>
</view>